<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AddCardActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:padding="16dp">

        <TextView
            android:id="@+id/deck_id"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Deck: Flashcard1"
            android:padding="6dp"
            android:textSize="22sp" />

        <TextView
            android:id="@+id/front_textview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Front"
            android:padding="6dp"
            android:textSize="22sp"/>

        <EditText
            android:id="@+id/front_id"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="front of card text" />

        <TextView
            android:id="@+id/back_textview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Back"
            android:padding="6dp"
            android:textSize="22sp" />

        <EditText
            android:id="@+id/back_id"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="6dp"
            android:hint="back of card text"/>

        <Button
            android:id="@+id/addcard_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Enter" />


    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>